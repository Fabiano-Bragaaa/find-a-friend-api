generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  cep           String
  address       String
  phone         String
  createdAt     DateTime @default(now())
  pets          Pets[]

  @@map("users")
}

model Pets {
  id                 String   @id @default(uuid())
  name               String
  age                String
  size               String
  energy_level       String
  independence_level String
  environment        String
  about              String
  pet_images         String[]
  requirements       String[]

  owner_id String
  owner    User   @relation(fields: [owner_id], references: [id])
}
